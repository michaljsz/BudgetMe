<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#05706d"/>
            <stroke android:width="3dp" android:color="#046c6a" />
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#005A66"
                android:centerColor="#046c6a"
                android:endColor="#005A66"
                android:angle="90" />
            <stroke android:width="3dp" android:color="#046c6a" />
            <corners android:radius="20dp"/>
        </shape>
    </item>
</selector>


